        <h1 class="titulo-ofertas">Ofertas Destacadas</h1>
        <hr>
        
        <div class="main-carousel">
            <% products.forEach(product => { %>
                <% if (product.discount >= 10) { %>
                    <article class="oferta carousel-cell" id="offersCarauselCell">
                        <div class="container-foto-oferta">
                            <a href="/products/detail/<%- product.id %>"><img src="images/products/<%- product.products_images[0].image %>" alt="" class="foto-oferta"></a>
                            <hr>
                        </div>
                        <div class="datos-oferta">
                            <a href="/products/detail/<%- product.id %>">
                                <h2 class="titulo-oferta"><%- product.name %></h2>
                            </a>
                            <h2 class="precio-oferta">$<%- toThousand(product.price - (product.price * product.discount / 100)) %></h2>
                            <% if (product.discount > 0) { %>
                                <span class="card-product-discount"><%- product.discount %>% OFF </span>
                                <span class="original-price">$<%- product.price %> </span>
                            <% } %>
