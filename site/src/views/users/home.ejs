<!DOCTYPE html>
<html lang="es">

<!-- Head -->
<%- include('../partials/head.ejs') %> 

<body>
    
    <!-- Header -->
    <%- include('../partials/header.ejs')  %> 

    <main class="main-home">
        <hr>
        <%- include('../partials/carousel.ejs')  %> 
        <hr>
        <h1 class="titulo-ofertas">Ofertas Destacadas</h1>
        <hr>
        <div class="ofertas-home">

            <% products.forEach(product => { %>                
                    <article class="oferta">
                        <div class="container-foto-oferta">
                            <img src="images\<%- product.products_images[0].image %>" alt="" class="foto-oferta">
                            <hr>
                        </div>
                        <div class="datos-oferta">
                            <a href="/products/detail/<%- product.id %>"> <h2 class="titulo-oferta"><%- product.name %></h2></a>
                            <h2 class="precio-oferta">$<%- toThousand(product.price - (product.price * product.discount / 100)) %></h2>
                            <% if (product.discount > 0) { %>
                                <span class="card-product-discount"><%- product.discount %>% OFF </span>
                                <span class="original-price">$<%- product.price %> </span>
                            <% } %>
                            <span>
                                <i class="fas fa-star"></i>
                                <i class="fas fa-star"></i>
                                <i class="fas fa-star"></i>
                                <i class="fas fa-star"></i>
                                <i class="fas fa-star"></i>
                            </span>
                        </div>
                    </article>                
            <% }) %>

        </div>

        <hr>
        <h2 class="titulo-destacadas">Series Destacadas</h2>
        <hr>

        <div class="series-destacadas">
            <article class="destacada">
                <div class="container-foto-destacada">
                    <img src="images\naruto_540x.jpg" alt="" class="foto-destacada">
                    <hr>
                </div>

                <a href="#"><h2 class="titulo-serie">NARUTO</h2></a>

            </article>

            <article class="destacada">
                <div class="container-foto-destacada">
                    <img src="images\one_piece_540x.jpg" alt="" class="foto-destacada">
                    <hr>
                </div>

                <a href="#"><h2 class="titulo-serie">ONE PIECE</h2></a>

            </article>

            <article class="destacada">
                <div class="container-foto-destacada">
                    <img src="images\demon_540x.jpg" alt="" class="foto-destacada">
                    <hr>
                </div>

                <a href="#"><h2 class="titulo-serie">DEMON SLAYER</h2></a>

            </article>

            <article class="destacada">
                <div class="container-foto-destacada">
                    <img src="images\Copy_of_Untitled_3_540x.jpg" alt="" class="foto-destacada">
                    <hr>
                </div>

                <a href="#"><h2 class="titulo-serie">HUNTER X HUNTER</h2></a>

            </article>
        </div>
        <!-- <hr>
        <h1 class="titulo-ofertas">OOPS... NO HAY NADA MAS POR QU√ç</h1>
        <hr> -->

        

    </main>

    <%- include('../partials/footer.ejs')  %> 

    <!-- JAVASCRIPT -->
    <script src="/javascript/carousel.js"></script>
    <script src="/javascript/cardSlider.js" defer></script>

</body>

</html>