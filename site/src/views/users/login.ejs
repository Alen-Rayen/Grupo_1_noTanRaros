<!DOCTYPE html>
<html lang="es">

    <%- include('../partials/head.ejs') %> 

<body class="login-body">

    <%- include('../partials/header.ejs')  %> 

<main class="login-main">

    <div class="form">
        <h2>Iniciar sesión</h2>

        <form method='POST' action="/users/login">
            <div class="form-container">
                <div class="containers">
                    <label for="">Correo electrónico</label>
                    <input class="input" type="email" name="email" id="email"
                        placeholder="Ingrese su correo electrónico">
                    <span class="error-message">Debe ingresar tu correo</span>
                    <label for="">Contraseña</label>
                    <input class="input" type="password" name="pass" id="pass" placeholder="Ingrese su contraseña">
                    <span class="error-message">Ingrese la contraseña</span>
                    <div class="check">
                        <label for="terns">Mantener la sesión</label>
                        <input type="checkbox" name="terms" id="terms">
                    </div>
                    <div class="button">
                        <button type="submit" class="button button-submit">Iniciar sesión</button>
                    </div>
                </div>
                <span><a href="">¿Olvidaste tu contraseña?</a></span>
                <label for="">Aún no te has registrado</label>
                <span><a href="/users/register">Registrate</a></span>
            </div>
        </form>
    </div>

</main>

<%- include('../partials/footer.ejs')  %> 


</body>

</html>