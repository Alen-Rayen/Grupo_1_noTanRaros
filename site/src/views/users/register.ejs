<!DOCTYPE html>
<html lang="es">

    <%- include('../partials/head.ejs') %> 

<body class="register-body">

    <%- include('../partials/header.ejs')  %>

    <main class="register-main">

    <div class="register-container">

        <div class="form">
            <h2>Registrarme</h2>

            <form method="POST" action="/users/register" enctype="multipart/form-data">
                <div class="form-container">
                    <div class="containers">
                        <label for="">Nombre</label>
                        <input class="input" type="text" name="nombre" id="nombre" placeholder="Ingrese su nombre" value="<%= locals.old ? old.nombre : null %>">
                        <% if (locals.errors && errors.nombre) { %>
                            <span class="error-message"><%= errors.nombre.msg %></span>
                        <% } %>
                        <label for="">Apellido</label>
                        <input class="input" type="text" name="apellido" id="apellido" placeholder="Ingrese su apellido" value="<%= locals.old ? old.apellido : null %>">
                        <% if (locals.errors && errors.apellido) { %>
                            <span class="error-message"><%= errors.apellido.msg %></span>
                        <% } %>
                        <label for="">Correo electrónico</label>
                        <input class="input" type="email" name="email" id="email" placeholder="Ingrese su correo electrónico" value="<%= locals.old ? old.email : null %>">
                        <% if (locals.errors && errors.email) { %>
                            <span class="error-message"><%= errors.email.msg %></span>
                        <% } %>
                        <label for="">Contraseña</label>
                        <input class="input" type="password" name="pass" id="pass" placeholder="Ingrese su contraseña">
                        <% if (locals.errors && errors.pass) { %>
                            <span class="error-message"><%= errors.pass.msg %></span>
                        <% } %>
                        <label for="">Ingrese la contraseña nuevamente</label>
                        <input class="input" type="password" name="pass2" id="pass2" placeholder="Ingrese la contraseña nuevamente">
                        <% if (locals.errors && errors.pass2) { %>
                            <span class="error-message"><%= errors.pass2.msg %></span>
                        <% } %>
                        <label for="avatar">Agregar Avatar</label>
                        <input class="input" type="file" name="avatar" accept="jpg">
                    </div>
                    <div class="check">
                        <label for="terms" class="terms">Acepto los <a href="">Términos y Condiciones</a></label>
                        <input type="checkbox" name="terms" id="terms">
                    </div>
                    <% if (locals.errors && errors.terms) { %>
                        <span class="error-message"><%= errors.terms.msg %></span>
                    <% } %>
                    <div class="check">
                        <label for="terns">Desea recibir notificaciones al correo?</label>
                        <input type="checkbox" name="emailNotifications" id="emailNotifications">
                    </div>
                    <div class="button">
                        <button type="submit" class="button button-submit">Crear mi cuenta</button>
                    </div>
                    <span><a href="/users/login">Ya tengo cuenta</a></span>
                </div>
            </form>
        </div>

        </div>

    </main>

    <%- include('../partials/footer.ejs')  %> 

</body>


</html>