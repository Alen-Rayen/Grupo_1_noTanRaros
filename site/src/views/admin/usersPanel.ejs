<!DOCTYPE html>
<html lang="es">
<%- include('../partials/head') %> 
<body>
    <%- include('../partials/adminHeader') %>
    <main class="productsListMain">
        <div class="table-container">
            <h1 class="heading">Lista de Usuarios</h1>
            <table class="table">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>NOMBRE</th>
                        <th>APELLIDO</th>
                        <th>EMAIL</th>
                        <th>ROL</th>
                        <th>#</th>
                    </tr>
                </thead>
                <tbody>
                    <% users.forEach(user => { %>
                        <tr>
                            <td data-label="ID"><%- user.id %></td>
                            <td data-label="Nombre"><%- user.first_name.toUpperCase() %></td>
                            <td data-label="Apellido"><%- user.last_name.toUpperCase() %></td>
                            <td data-label="Email" id="userEmail"><%- user.email %></td>
                            <td data-label="Rol"><%- user.rol %></td>
                            <td data-label="#"><a href="#" class="table-btn">Editar</a>
                                <form action="#" method="">
                                    <button class="table-delete-btn">Eliminar</button>
                                </form>
                            </td>
                        </tr>
                    <% }) %>
                </tbody>
            </table>
        </div>
    </main>
    <%- include('../partials/footer')  %> 
    <script src="/javascript/emailTrim.js"></script>
</body>
</html>